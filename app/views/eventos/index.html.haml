
%p=link_to 'Crear evento', new_evento_path

%table#calendars
  %thead
    %tr
      %th Fecha
      %th Asignatura
  %tbody
    - @eventos.each do |evento|
      %tr
        %td= evento.fecha
        %td= evento.asignatura
        %td= link_to "Ver evento", evento_path(evento)
        %td= link_to "Modificar evento", edit_evento_path(evento)
        %td= button_to "Borrar", evento_path(evento), :method => :delete, :confirm => "Â¿Estas seguro?"
